{% layout '../index-layout.liquid', title: 'Intern Update Form' %}
    {% assign intern = this.getIntern %}

    {% block content %}
        <form 
            action="/update-intern" 
            method="post"
            class="form"
        >
            <p class="form__info">
                Fill in  the following to update Intern with selected Id
            </p>

            <input 
                type="hidden" 
                id="internId" 
                name="internId"
                class="form__input"
                value={{ intern.id }}
            />

            <input
                type="hidden"
                name="csrfToken"
                value={{ csrfToken }}
            />

            <div class="form__item">
                <label 
                    for="firstName" 
                    class="form__label"
                >
                    First Name:
                </label>
                <br />
                <input 
                    type="text" 
                    id="firstName" 
                    name="firstName"
                    class="form__input"
                    value = {{ intern.firstName }}
                />
            </div>
        
            <div class="form__item">
                <label 
                    for="lastName" 
                    class="form__label"
                >
                    Last Name:
                </label>
                <br />
                <input 
                    type="text" 
                    id="lastName" 
                    name="lastName"
                    class="form__input"
                    value= {{ intern.lastName }}
                />
            </div>

            <div class="form__item">
                <label 
                    for="internshipId" 
                    class="form__label"
                >
                    Internship ID:
                </label>
                <br />
                <input 
                    type="number" 
                    id="internshipId" 
                    name="internshipId"
                    class="form__input" 
                    value= {{ intern.internshipId }}
                />

            <div class="form__item">
                <label 
                    for="specialtyAreaId" 
                    class="form__label"
                >
                    Specialty Area ID:
                </label>
                <br />
                <input 
                    type="number" 
                    id="specialtyAreaId" 
                    name="specialtyAreaId"
                    class="form__input" 
                    value= {{ intern.specialtyAreaId }}
                />
            </div>

            <div class="form__item">
                <label 
                    for="age" 
                    class="form__label"
                >
                    Age:
                </label>
                <br />
                <input 
                    type="number" 
                    id="age" 
                    name="age"
                    class="form__input" 
                    value = {{ intern.age }}
                />
            </div>
        
            <div class="form__item">
                <label 
                    for="email" 
                    class="form__label"
                >
                    Email:
                </label>
                <br />
                <input 
                    type="email" 
                    id="email" 
                    name="email"
                    class="form__input" 
                    value = {{ intern.email }}
                />
            </div>

            <div class="form__item">
                <label 
                    for="phone" 
                    class="form__label"
                >
                    Phone No:
                </label>
                <br />
                <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="form__input"
                    value= {{ intern.phone }}
                />
            </div>

            <div class="form__item">
                <button 
                    type="submit" 
                    class="form__btn"
                >
                    Update intern
                </button>
            </div>
        </form>
    {% endblock %}