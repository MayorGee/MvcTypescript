{% layout '../index-layout.liquid', title: 'Mentors Page' %}

{% assign mentors = this.getMentors %}

    {% block content %}
        <div class="mentors">
            <ul class="users-list">
                {% for mentor in mentors %}
                    <li class="users-list__item">
                        <div class="user">
                            <div class="user__detail-row">
                                <label class="user__detail-label">Name:</label> 
                                <span class="user__detail">{{ mentor.firstName | capitalize }} {{ mentor.lastName | capitalize }}</span>
                            </div>

                            <div class="user__detail-row">
                                <label class="user__detail-label">Email:</label>
                                <span class="user__detail">{{ mentor.email }}</span>
                            </div>
                            
                            <div class="user__buttons">
                                <button class="user__button">
                                    <a 
                                        href="/mentor?id={{ mentor.id }}"
                                        class="user__link"
                                    >
                                        View
                                    </a>
                                </button>
                            </div>
                        </div>
                    </li>
                {% endfor %}

                <li class="users-list__item">
                    <form action="/add-mentor">
                        <button 
                            type="submit"
                            class="users-list__add-button"
                        >
                            Add New Mentor
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    {% endblock %}